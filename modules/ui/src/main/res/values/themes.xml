<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="App" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/color_surface</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_500</item>
        <item name="colorSecondaryVariant">@color/primary_500</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar. -->
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Elements -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="collapsingToolbarLayoutStyle">@style/Widget.MaterialComponents.Toolbar.Surface
        </item>

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/google_sans</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/primary_500</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/App</item>  # Required.
    </style>

</resources>